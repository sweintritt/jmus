<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <File name="logfile" fileName="${sys:user.home}/.jmus.log">
            <PatternLayout pattern="%-5level (%-8t) [%-20c{1.}] %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="logfile"/>
        </Root>
    </Loggers>
</Configuration>